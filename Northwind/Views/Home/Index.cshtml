@using Northwind.Models
@model IEnumerable<Discount>
@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>N<i class="fa fa-compass"></i>rthwind</h1>
    <p class="lead">
        We have the best prices and selection of high quality foods & beverages on the
        Planet. Check out our featured discounts below.
    </p>
    <p><a href="#" class="btn btn-danger btn-lg">Place your order now &raquo;</a></p>
</div>
<div class="row">
    @foreach (Discount d in @Model)
    {
        <div class="col-sm-4">
            <h2 class="font-md">@d.Title</h2>
            <hr class="hr-special" />
            <p>
                @d.Description
            </p>
            <p><i>Discount Expires: @string.Format("{0:MM/dd/yyyy}", @d.EndTime)</i></p>
            <a class="special" data-container="body" data-toggle="popover" data-placement="right" data-content="@d.Code">
                <i class="fa fa-hand-o-right"></i> Discount Code
            </a>
        </div>
    }
</div>
<div class="row">
    <hr class="hr-special" />
    <div class="col-sm-4" style="padding-top: 2em">
        <a href="~/Product/Discount" class="font-lg"><i class="fa fa-tag" aria-hidden="true"> See all discounts</i></a>
    </div>
</div>

